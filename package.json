{
  "name": "beep-server",
  "version": "0.0.0",
  "description": "Tiny server for the beep app",
  "engines": {
    "node": ">= 20.9 < 21"
  },
  "devDependencies": {
    "@kineticcafe/rollup-plugin-delete": "^3.0.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/jest": "~29.5",
    "@types/node": "~20",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "~7.6",
    "@typescript-eslint/parser": "~7.6",
    "eslint": "~8.56",
    "eslint-config-prettier": "~9.1",
    "eslint-plugin-jest": "~28.2",
    "jest": "~29.7",
    "prettier": "~3.2",
    "rimraf": "~5.0",
    "rollup": "^4.19.2",
    "ts-api-utils": "~1.3",
    "ts-jest": "~29.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "~5.4"
  },
  "scripts": {
    "start": "node build/index.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "dev": "ts-node-dev src/index.ts",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "pnpm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint . --ext .ts --ext .mts",
    "test": "jest --coverage",
    "prettier": "prettier --config .prettierrc --write .",
    "test:watch": "jest --watch"
  },
  "author": "Nosler & JIGutierrez",
  "license": "CC0-1.0",
  "dependencies": {
    "dotenv": "^16.4.5",
    "hyper-express": "^6.16.3",
    "tslib": "~2.6",
    "ws": "^8.17.0",
    "zod": "^3.23.8"
  },
  "pnpm": {
    "overrides": {
      "ws@>=8.0.0 <8.17.1": ">=8.17.1"
    }
  }
}